---
import type { GetStaticPaths } from 'astro';
import { getCollection, type CollectionEntry, render } from 'astro:content';
import BlogPost from '../../../layouts/BlogPost.astro';
import { getPostsForLanguage } from '../../../utils/posts';

export const getStaticPaths: GetStaticPaths = async () => {
	const isDev = import.meta.env.DEV;
	const englishPosts = await getPostsForLanguage('en', isDev);
	
	return englishPosts.map((post) => {
		// Remove o sufixo -en do ID para URLs mais limpas
		const cleanId = post.id.replace(/-en$/, '');
		return {
			params: { id: cleanId },
			props: { post },
		};
	});
};

type Props = {
	post: CollectionEntry<'blog'>;
};

const { post } = Astro.props;
const { Content } = await render(post);
---

<BlogPost {...post.data}>
	<Content />
</BlogPost>