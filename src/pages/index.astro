---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { useTranslations, getDateFormatter } from '../i18n/utils';

const lang = 'pt';
const t = useTranslations(lang);
const formatDate = getDateFormatter(lang);

// Filtrar posts em português
const allPosts = await getCollection('blog');
const posts = allPosts
	.filter(post => post.data.language === 'pt')
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<!doctype html>
<html lang="pt">
	<head>
		<BaseHead title={t('blog.title')} description={t('meta.description')} lang={lang} />
	</head>
	<body class="bg-gradient-to-br from-purple-950 via-purple-900 to-indigo-950 transition-colors duration-300">
		<Header lang={lang} />

		<!-- Hero Section -->
		<section class="py-16 px-4 sm:px-6 lg:px-8 bg-gradient-to-br from-purple-900 via-purple-800 to-blue-900 text-white transition-colors duration-300 relative overflow-hidden">
			<div class="absolute inset-0 bg-gradient-to-r from-blue-600/20 via-purple-600/20 to-pink-600/20 animate-pulse"></div>
			<div class="max-w-blog mx-auto text-center relative z-10">
				<h1 class="text-4xl md:text-5xl font-bold mb-4 bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400 bg-clip-text text-transparent drop-shadow-lg">
					{t('blog.title')}
				</h1>
				<p class="text-xl text-gray-200 max-w-2xl mx-auto drop-shadow-md">
					{t('blog.subtitle')}
				</p>
			</div>
		</section>

		<!-- Posts Grid -->
		<main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
			<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
				{posts.map((post) => (
					<article class="bg-gradient-to-br from-purple-900 to-purple-800 rounded-xl shadow-2xl border border-purple-700 overflow-hidden hover:shadow-blue-500/25 hover:border-blue-500 transition-all duration-300 group relative">
						<div class="absolute inset-0 bg-gradient-to-r from-blue-600/0 via-purple-600/0 to-pink-600/0 group-hover:from-blue-600/10 group-hover:via-purple-600/10 group-hover:to-pink-600/10 transition-all duration-300"></div>
						<div class="p-6 relative z-10">
							<div class="flex items-center justify-between mb-4">
								<span class="px-3 py-1 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-full text-sm font-medium border border-blue-500 shadow-lg">
									{post.data.title.includes('JavaScript') ? 'JavaScript' : 
									 post.data.title.includes('React') ? 'React' : 'Development'}
								</span>
								<span class="text-gray-400 text-sm">
									{formatDate(post.data.pubDate)}
								</span>
							</div>
							
							<h2 class="text-xl font-bold text-white mb-3 hover:text-blue-300 transition-colors group-hover:drop-shadow-lg">
								<a href={`/blog/${post.id}/`}>
									{post.data.title}
								</a>
							</h2>
							
							{post.data.description && (
								<p class="text-gray-300 mb-4 leading-relaxed">
									{post.data.description}
								</p>
							)}
							
							<div class="flex items-center justify-between">
								<span class="text-gray-400 text-sm">
									{post.body ? Math.ceil(post.body.length / 1000) : 5} {t('blog.readingTime')}
								</span>
								<a 
									href={`/blog/${post.id}/`}
									class="text-blue-400 hover:text-pink-400 font-medium text-sm flex items-center gap-1 group transition-all duration-300"
								>
									{t('blog.readMore')} 
									<span class="group-hover:translate-x-1 transition-transform">→</span>
								</a>
							</div>
						</div>
					</article>
				))}
			</div>

			{posts.length === 0 && (
				<div class="text-center py-16">
					<h2 class="text-2xl font-bold text-white mb-4">
						{t('blog.noPosts')}
					</h2>
					<p class="text-gray-300">
						{t('blog.noPostsDesc')}
					</p>
				</div>
			)}
		</main>

		<Footer lang={lang} />
	</body>
</html>
