---
interface Column {
  id: string;
  title: string;
}

interface Props {
  columns: Column[];
}

const { columns } = Astro.props;
---

<div class="code-table-container">
  <div class="code-table-header">
    {columns.map((column) => (
      <div class="code-table-column-header">
        <h3>{column.title}</h3>
      </div>
    ))}
  </div>
  
  <div class="code-table-content">
    <slot />
  </div>
</div>

<style>
  .code-table-container {
    margin: 1.5rem 0;
    border: 1px solid rgb(63 63 70);
    border-radius: 0.75rem;
    overflow: hidden;
    background: rgb(24 24 27);
  }

  .code-table-header {
    display: grid;
    grid-auto-flow: column;
    grid-auto-columns: 1fr;
    background: rgb(39 39 42);
    border-bottom: 1px solid rgb(63 63 70);
  }

  .code-table-column-header {
    padding: 0.75rem 1rem;
    border-right: 1px solid rgb(63 63 70);
  }

  .code-table-column-header:last-child {
    border-right: none;
  }

  .code-table-column-header h3 {
    margin: 0;
    font-size: 0.875rem;
    font-weight: 600;
    color: rgb(212 212 216);
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .code-table-content {
    display: grid;
    grid-auto-flow: column;
    grid-auto-columns: 1fr;
  }

  .code-table-content :global([data-code-column]) {
    border-right: 1px solid rgb(63 63 70);
    overflow-x: auto;
  }

  .code-table-content :global([data-code-column]:last-child) {
    border-right: none;
  }

  .code-table-content :global([data-code-column] pre) {
    margin: 0;
    padding: 1.5rem;
    background: transparent;
    height: 100%;
  }

  @media (max-width: 768px) {
    .code-table-header {
      grid-auto-flow: row;
      grid-auto-columns: unset;
    }

    .code-table-column-header {
      border-right: none;
      border-bottom: 1px solid rgb(63 63 70);
    }

    .code-table-column-header:last-child {
      border-bottom: none;
    }

    .code-table-content {
      grid-auto-flow: row;
      grid-auto-columns: unset;
    }

    .code-table-content :global([data-code-column]) {
      border-right: none;
      border-bottom: 1px solid rgb(63 63 70);
    }

    .code-table-content :global([data-code-column]:last-child) {
      border-bottom: none;
    }
  }
</style>
