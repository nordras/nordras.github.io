---
import { SITE_TITLE } from '../consts';
import { useTranslations, getLangFromUrl } from '../i18n/utils';
import LanguageSelector from './LanguageSelector.astro';
import type { Language } from '../i18n/translations';

interface Props {
	lang?: Language;
}

const { lang = getLangFromUrl(Astro.url) } = Astro.props;
const t = useTranslations(lang);
---

<header class="bg-slate-900 border-b border-slate-800 shadow-sm transition-colors duration-200">
	<nav class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between">
		<h2 class="text-xl font-bold">
			<a href={lang === 'pt' ? '/' : `/${lang}`} class="text-slate-50 hover:text-cyan-400 transition-colors">
				{t('blog.title')}
			</a>
		</h2>
		
		<div class="flex items-center space-x-4">
			<LanguageSelector currentLang={lang} />
			
			<button 
				id="theme-toggle" 
				class="p-2 rounded-lg bg-slate-800 hover:bg-slate-700 border border-slate-700 transition-colors"
				aria-label={t('theme.toggle')}
			>
				<svg id="sun-icon" class="w-5 h-5 text-amber-500 block" fill="currentColor" viewBox="0 0 20 20">
					<path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd" />
				</svg>
			</button>
		</div>
	</nav>
</header>

