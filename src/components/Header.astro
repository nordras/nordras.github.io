---
import { SITE_TITLE } from '../consts';
import { useTranslations, getLangFromUrl } from '../i18n/utils';
import LanguageSelector from './LanguageSelector.astro';
import type { Language } from '../i18n/translations';

interface Props {
	lang?: Language;
}

const { lang = getLangFromUrl(Astro.url) } = Astro.props;
const t = useTranslations(lang);
const isDev = import.meta.env.DEV;
---

<header class="bg-slate-900 border-b border-slate-800 shadow-sm transition-colors duration-200">
	<nav class="max-w-blog mx-auto px-4 py-4 flex items-center justify-between">
		<h2 class="text-xl font-bold flex items-center">
			<a href={lang === 'pt' ? '/' : `/${lang}`} class="text-slate-50 hover:text-cyan-400 transition-colors">
				{t('blog.title')}
			</a>
		</h2>
		
		<div class="flex items-center gap-4">
			{isDev && (
				<a 
					href="/sandbox" 
					class="px-3 py-1.5 text-sm bg-yellow-600 text-white rounded-lg hover:bg-yellow-700 transition-all duration-200 flex items-center"
					title="Sandbox - Dev Only"
				>
					üõ†Ô∏è Sandbox
				</a>
			)}
			<LanguageSelector currentLang={lang} />
		</div>
	</nav>
</header>


